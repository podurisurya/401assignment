<html>

<head>
  <title>Registration Form</title>
 
  <style>
  body{
    background: linear-gradient(120deg,lightblue,lightpink);
}
#surya{
   display:flex;
   flex-direction: column;
   margin: auto;
   width:600px;
   margin-top: 200px;
   background: #fff;
   padding-bottom: 30px;
   margin-bottom: 100px;
   cursor: pointer;
   border-radius: 35px;
}
.header{
    display:flex;
    flex-direction: column;
    text-align: center;
    gap:9px;
    width:100%;
    margin-top: 30px;
}

.a{
    display: flex;
    align-items: center;
    margin:auto;
    width:350px;
    height:50px;
    background:#eaeaea;
    border-radius:6px;
    gap:5px;
    padding-right: 20px;
    padding-left: 20px;
    margin-right: 30px;
}
.b{
    display:flex;
    gap:30px;
    margin:60px auto;
}
.c{
    display:flex;
    justify-content:center;
    align-items:center;
    width:250px;
    height:59px;
    color: #fff;
    background:green;
    border-radius:10px;
    font-size: 19px;
    cursor:pointer;
}
.d{
    padding-left:32px;
    font-size:20px;
}
.name{
    position:relative;
    left:5px;
    top:52px; 
    padding-left: 30px;  
}
.b{
    padding-left:20px;
}
.g{
   flex-direction: column;
   margin: auto;
   width:600px;
   background: #fff;
   padding-bottom: 50px;
   border:collapse;
   padding-left: 20px;
   column-span: 20px;
   font-size:18px;
   padding-right:20px;
}
</style>
</head>

<body>
  <div id="surya">
    <form id="reg-form" action="/signupsubmit" method="GET">
      <div class="header">
        <h1>SignUp page</h1>
      </div>
      <div>
        <h2 class="name">Name</h2>
        <input  class="a" type="text" id="name" name="full_name" placeholder="Enter Full Name">
      </div>
      <div>
        <h2 class="name">Email</h2>
        <input  class="a" type="email" id="email" name="email" placeholder="Enter Email">
      </div>
      <div>
        <h2 class="name">Password</h2>
        <input  class="a" type="password" id="password" name="password" placeholder="Enter Password">
      </div>
      <div>
        <h2 class="name">Date of Birth</h2>
        <input  class="a" type="date" id="dob" name="dob">
      </div><br><br>
      <div class="d">
        <input required type="checkbox" id="acceptTerms" name="acceptTerms">
        <label for="acceptTerms">Accept Terms & Conditions</label>
      </div>
      <div class="b">
        <input class="c" type="Submit" value="Submit" />
      </div>
  </div>
  </form>

 
</body>

</html>